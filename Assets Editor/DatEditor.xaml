                                    <Button x:Name="ObjectSave" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Save" materialDesign:RippleAssist.IsDisabled="True" PreviewMouseLeftButtonDown="ObjectSave_PreviewMouseLeftButtonDown" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ContentSave" Width="25" Height="25"/>
                                    </Button>
                                    <Button x:Name="CopyFlags" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Copy Flags" materialDesign:RippleAssist.IsDisabled="True" PreviewMouseLeftButtonDown="CopyObjectFlags" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ArrangeBringForward" Width="25" Height="25"/>
                                    </Button>
                                    <Button x:Name="PasteFlags" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Paste Flags" materialDesign:RippleAssist.IsDisabled="True" PreviewMouseLeftButtonDown="PasteObjectFlags" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ArrangeSendBackward" Width="25" Height="25"/>
                                    </Button>
                                    <Button x:Name="NewObject" Style="{StaticResource MaterialDesignIconButton}" ToolTip="New Object" Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}" materialDesign:RippleAssist.IsDisabled="True" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="FilePlus" Width="25" Height="25"/>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                    <StackPanel>
                        <Menu IsMainMenu="True" DockPanel.Dock="Top">
                            <MenuItem Header="_File">
                                <MenuItem Header="Exit" InputGestureText="Ctrl+E" Click="Exit_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="ExitToApp" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Compile" Click="Compile_Click">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="ContentSaveCogOutline" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                        </Menu>
                        <TabControl x:Name="ViewTabControl" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,0,10,0">
                            <TabItem Header="Properties">
                                <GroupBox Header="AppearanceFlags" Background="#FFEAEAEA" Height="700" VerticalAlignment="Top" x:Name="Tab1">
                                    <ScrollViewer>
                                        <WrapPanel Orientation="Horizontal">
                                            <StackPanel Margin="5,0,5,-6">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="20">
